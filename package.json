{
   "name": "@eth-dev/monorepo",
   "version": "1.0.0",
   "keywords": [
      "ethereum",
      "react",
      "uniswap",
      "workspaces",
      "yarn"
   ],
   "private": true,
   "scripts": {
      "build": "yarn workspace @eth-dev/app build --max-old-space-size=12288",
      "chain": "yarn workspace @eth-dev/hardhat chain",
      "fork": "yarn workspace @eth-dev/hardhat fork",
      "node": "yarn workspace @eth-dev/hardhat chain",
      "test": "yarn workspace @eth-dev/hardhat test",
      "start": "yarn workspace @eth-dev/app start",
      "compile": "yarn workspace @eth-dev/hardhat compile",
      "deploy": "yarn workspace @eth-dev/hardhat deploy",
      "watch": "yarn workspace @eth-dev/hardhat watch",
      "accounts": "yarn workspace @eth-dev/hardhat accounts",
      "balance": "yarn workspace @eth-dev/hardhat balance",
      "send": "yarn workspace @eth-dev/hardhat send",
      "ipfs": "yarn workspace @eth-dev/app ipfs",
      "surge": "yarn workspace @eth-dev/app surge",
      "s3": "yarn workspace @eth-dev/app s3",
      "ship": "yarn workspace @eth-dev/app ship",
      "generate": "yarn workspace @eth-dev/hardhat generate",
      "account": "yarn workspace @eth-dev/hardhat account",
      "mine": "cd packages/hardhat && npx hardhat mine",
      "wallet": "cd packages/hardhat && npx hardhat wallet",
      "fundedwallet": "cd packages/hardhat && npx hardhat fundedwallet",
      "flatten": "cd packages/hardhat && npx hardhat flatten",
      "graph-run-node": "cd docker/graph-node && docker-compose up",
      "graph-remove-node": "cd docker/graph-node && docker-compose down",
      "graph-prepare": "mustache packages/subgraph/config/config.json packages/subgraph/src/subgraph.template.yaml > packages/subgraph/subgraph.yaml",
      "graph-codegen": "yarn workspace @eth-dev/subgraph graph codegen",
      "graph-build": "yarn workspace @eth-dev/subgraph graph build",
      "graph-create-local": "yarn workspace @eth-dev/subgraph graph create --node http://localhost:8020/ eth-dev/your-contract",
      "graph-remove-local": "yarn workspace @eth-dev/subgraph graph remove --node http://localhost:8020/ eth-dev/your-contract",
      "graph-deploy-local": "yarn workspace @eth-dev/subgraph graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 eth-dev/your-contract",
      "graph-ship-local": "yarn graph-prepare && yarn graph-codegen && yarn graph-deploy-local",
      "deploy-and-graph": "yarn deploy && yarn graph-ship-local"
   },
   "workspaces": {
      "packages": [
         "packages/*"
      ],
      "nohoist": [
         "**/@graphprotocol/graph-ts",
         "**/@graphprotocol/graph-ts/**"
      ]
   }
}
