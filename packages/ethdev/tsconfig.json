{
   "compilerOptions": {
      "target": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "types": ["vite/client", "@emotion/react", "node", "ethers"],
      "allowJs": false,
      "skipLibCheck": false,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "typeRoots": ["node_modules/@types", "helpers/definitions"] /* List of folders to include type definitions from. */,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "Node",
      "incremental": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "rootDir": ".",
      "baseUrl": ".",
      "outDir": "dist",
      "paths": {
         "~~/*": ["./scripts/*", "./test/*", "./helpers/*"]
      }
   },
   "include": ["./src", "types", "./scripts", "test"],
   "exclude": ["**/node_modules", ".husky", "./src/styles/css", "./tailwind.config.js"],
   "files": ["./hardhat.config.ts", "./src/helpers/__global.ts"]
}
